# ==============================================================================
# DJANGO CORE SETTINGS
# ==============================================================================
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=False
DJANGO_LOG_LEVEL=INFO

# Hosts permitidos (separados por vírgula)
# Em produção, adicione seu domínio do Render: yourapp.onrender.com
ALLOWED_HOSTS=localhost,127.0.0.1,yourapp.onrender.com

# CSRF Trusted Origins (separados por vírgula)
# Em produção, adicione: https://yourapp.onrender.com
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,https://yourapp.onrender.com

# ==============================================================================
# DATABASE (PostgreSQL)
# ==============================================================================
# Render fornecerá automaticamente a DATABASE_URL
DATABASE_URL=postgresql://user:password@localhost:5432/cgbookstore

# ==============================================================================
# SUPABASE STORAGE
# ==============================================================================
USE_SUPABASE_STORAGE=True
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here

# ==============================================================================
# REDIS (CACHE E CELERY)
# ==============================================================================
# Render fornecerá automaticamente a REDIS_URL quando você adicionar Redis
REDIS_URL=redis://localhost:6379/0

# ==============================================================================
# GOOGLE GEMINI AI
# ==============================================================================
GOOGLE_API_KEY=your-google-ai-api-key-here

# ==============================================================================
# SOCIAL AUTHENTICATION
# ==============================================================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# ==============================================================================
# MERCADO PAGO
# ==============================================================================
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-access-token
MERCADOPAGO_PUBLIC_KEY=your-mercadopago-public-key

# ==============================================================================
# EMAIL SETTINGS (Opcional - para envio de emails)
# ==============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=your-email@gmail.com
