# =============================================================================
# Django Settings
# =============================================================================
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# Database Configuration
# =============================================================================
# Para Supabase, use a connection string DIRETA (não pooler) para migrations
# Formato: postgresql://postgres.[project-ref]:[password]@aws-0-us-east-1.pooler.supabase.com:6543/postgres
#
# IMPORTANTE para Render + Supabase:
# 1. Use a "Direct connection" durante migrations e deploy
# 2. A connection string deve incluir o formato: postgres.[project-ref]:[password]
# 3. Para evitar problemas de IPv4/IPv6, o settings.py já está configurado
#
# Onde encontrar no Supabase:
# Dashboard > Project Settings > Database > Connection String > URI (mode: Session)
#
# Exemplo:
# DATABASE_URL=postgresql://postgres.xxxxxxxxxxxx:your-password@aws-0-us-east-1.pooler.supabase.com:6543/postgres
#
DATABASE_URL=postgresql://user:password@host:port/database

# =============================================================================
# Supabase API & Storage
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# =============================================================================
# Email Configuration (Brevo - Sendinblue)
# =============================================================================
# Usando Brevo API para desenvolvimento e produção
# Mais confiável que SMTP e funciona no Render Free tier

# Email remetente (deve estar verificado no Brevo)
DEFAULT_FROM_EMAIL=seu-email-verificado@dominio.com

# Usar Brevo Web API (recomendado para produção e desenvolvimento)
USE_BREVO_API=True
EMAIL_HOST_PASSWORD=sua-brevo-api-key-aqui

# Para debug local (descomente para ver emails no console)
# USE_BREVO_API=False
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# =============================================================================
# Email Configuration (SMTP) - ALTERNATIVA
# =============================================================================
# Se preferir usar SMTP tradicional ao invés de Brevo API
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=seu-email@gmail.com
# EMAIL_HOST_PASSWORD=sua-senha-de-app

# =============================================================================
# Google Books API
# =============================================================================
GOOGLE_BOOKS_API_KEY=your-google-books-api-key

# =============================================================================
# Social Authentication (OAuth)
# =============================================================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# =============================================================================
# Gemini AI API
# =============================================================================
GEMINI_API_KEY=your-gemini-api-key

# =============================================================================
# Payment Gateway (Mercado Pago)
# =============================================================================
MERCADOPAGO_ACCESS_TOKEN=your-access-token
MERCADOPAGO_PUBLIC_KEY=your-public-key

# =============================================================================
# Site Configuration
# =============================================================================
SITE_URL=http://localhost:8000

# =============================================================================
# Redis (opcional - para cache)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
